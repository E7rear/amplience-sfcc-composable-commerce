{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://sfcc.com/slots/personalised-slot",
	"title": "Title",
	"description": "Description",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"_meta": {
			"type": "object",
			"properties": {
				"deliveryKey": {
					"type": "string",
					"title": "Delivery Key",
					"description": "A unique key for this slot in your application (home/top)"
				}
			}
		},
		"defaultContent": {
			"title": "Default",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"$ref": "https://sfcc.com/libs/all-definitions#/definitions/anyComponent"
							}
						}
					}
				]
			}
		},
		"maxNumberMatches": {
			"title": "Max number of matches",
			"description": "",
			"type": "number",
			"minimum": 0,
			"maximum": 10,
			"default": 1
		},
		"variants": {
			"type": "array",
			"title": "Variants",
			"items": {
				"allOf": [
					{
						"$ref": "https://sfcc.com/libs/all-definitions#/definitions/variantLinks"
					}
				]
			}
		}
	},
	"propertyOrder": []
}